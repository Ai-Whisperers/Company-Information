# Test Environment Configuration - Real Data, No Mocks

# Environment
NODE_ENV=test
LOG_LEVEL=info

# Database - Real PostgreSQL test instance
DATABASE_URL=postgresql://testuser:testpass@localhost:5432/aiwhisperers_test
TEST_SHADOW_DATABASE_URL=postgresql://testuser:testpass@localhost:5432/aiwhisperers_test_shadow

# Cache - Real Redis test instance
REDIS_URL=redis://localhost:6379/1

# GitHub - Real test organization (read-only tokens)
GITHUB_TOKEN=ghp_real_test_token_here
GITHUB_ORG=ai-whisperers-test
GITHUB_CLIENT_ID=test_github_client_id
GITHUB_CLIENT_SECRET=test_github_client_secret

# Azure DevOps - Real test project
AZURE_DEVOPS_PAT=real_test_pat_here
AZURE_DEVOPS_ORG=aiwhisperers-test
AZURE_DEVOPS_PROJECT=TestProject

# Slack - Test webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/TEST/WEBHOOK/URL

# NextAuth - Test configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=test-nextauth-secret-for-testing

# Test-specific settings
TEST_TIMEOUT=30000
PARALLEL_TESTS=false
CLEANUP_AFTER_TEST=true
USE_REAL_DATA=true
NO_MOCKS=true

# API Configuration
API_BASE_URL=http://localhost:4000
DASHBOARD_URL=http://localhost:3000

# Performance Testing
LOAD_TEST_USERS=10
STRESS_TEST_DURATION=60s
PERFORMANCE_THRESHOLD_MS=500

# Test Data Configuration
MAX_TEST_REPOS=20
MAX_TEST_WORKITEMS=100
HISTORICAL_DATA_DAYS=90

# Debug flags
DEBUG_TESTS=false
VERBOSE_LOGGING=false
TRACE_SQL=false