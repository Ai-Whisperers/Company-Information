# Environment Variables for AI-Whisperers Company Website

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://ai-whisperers.com
NEXT_PUBLIC_SITE_NAME="AI-Whisperers"

# AI API Keys (Server-side only)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Contact Configuration
NEXT_PUBLIC_CONTACT_EMAIL=business@ai-whisperers.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@ai-whisperers.com

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@aiwhisperers
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/ai-whisperers
NEXT_PUBLIC_GITHUB_URL=https://github.com/Ai-Whisperers

# Business Information
NEXT_PUBLIC_COMPANY_NAME=AI-Whisperers
NEXT_PUBLIC_COMPANY_ADDRESS="Innovation Hub, Tech City"
NEXT_PUBLIC_COMPANY_PHONE="+1 (555) 123-4567"

# Feature Flags
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true

# Development
NODE_ENV=development
ANALYZE=false