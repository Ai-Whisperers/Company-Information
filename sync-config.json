{
  "version": "1.0",
  "organization": "Ai-Whisperers",
  "lastUpdated": "2025-09-09T12:00:00Z",
  "description": "File synchronization configuration for AI-Whisperers organization",
  
  "globalSettings": {
    "enabled": true,
    "dryRun": false,
    "createPullRequests": true,
    "autoMerge": false,
    "conflictResolution": "manual",
    "backupBeforeSync": true,
    "maxConcurrentSyncs": 3,
    "retryAttempts": 2,
    "notificationChannels": ["github-issues", "workflow-summary"]
  },
  
  "syncRules": {
    "CLAUDE.md": {
      "enabled": true,
      "description": "Project instructions and development guidelines",
      "sourceFile": "CLAUDE.md",
      "targets": [
        {
          "repository": "Comment-Analyzer",
          "targetPath": "CLAUDE.md",
          "syncMode": "replace",
          "preserveLocal": false
        },
        {
          "repository": "AI-Investment", 
          "targetPath": "CLAUDE.md",
          "syncMode": "replace",
          "preserveLocal": false
        },
        {
          "repository": "clockify-ADO-automated-report",
          "targetPath": "CLAUDE.md", 
          "syncMode": "replace",
          "preserveLocal": false
        },
        {
          "repository": "AI-Whisperers-website-and-courses",
          "targetPath": "CLAUDE.md",
          "syncMode": "replace", 
          "preserveLocal": false
        },
        {
          "repository": "AI-Whisperers",
          "targetPath": "CLAUDE.md",
          "syncMode": "replace",
          "preserveLocal": false
        }
      ],
      "exclusions": [],
      "transformations": [
        {
          "type": "repository-specific-sections",
          "rules": {
            "Comment-Analyzer": {
              "includeOnly": ["Organization Overview", "Repository Structure", "Comment-Analyzer Architecture", "Development Commands.Comment-Analyzer", "Git Workflow", "Key Environment Variables.Comment-Analyzer", "Testing Strategy.Comment-Analyzer"],
              "customContent": {
                "additionalNotes": "Focus on AI-powered analysis and Streamlit development patterns."
              }
            },
            "AI-Investment": {
              "includeOnly": ["Organization Overview", "Repository Structure", "AI-Investment Architecture", "Development Commands.AI-Investment", "Git Workflow", "Key Environment Variables.AI-Investment", "Testing Strategy.AI-Investment"],
              "customContent": {
                "additionalNotes": "Focus on investment analysis, FastAPI backend, and Next.js frontend integration."
              }
            },
            "clockify-ADO-automated-report": {
              "includeOnly": ["Organization Overview", "Repository Structure", "clockify-ADO-automated-report Architecture", "Development Commands.clockify-ADO-automated-report", "Git Workflow", "Key Environment Variables.clockify-ADO-automated-report", "Testing Strategy.clockify-ADO-automated-report"],
              "customContent": {
                "additionalNotes": "Focus on Hexagonal Architecture patterns and API integration automation."
              }
            }
          }
        }
      ]
    },
    
    "README.md": {
      "enabled": false,
      "description": "Repository-specific README files should not be synchronized",
      "reason": "Each repository needs its own unique README"
    },
    
    ".gitignore-template": {
      "enabled": true,
      "description": "Base gitignore template for all repositories",
      "sourceFile": ".gitignore",
      "targets": [
        {
          "repository": "web-platform",
          "targetPath": ".gitignore",
          "syncMode": "merge-append",
          "preserveLocal": true,
          "mergeStrategy": "append-unique"
        },
        {
          "repository": "core-services",
          "targetPath": ".gitignore", 
          "syncMode": "merge-append",
          "preserveLocal": true,
          "mergeStrategy": "append-unique"
        },
        {
          "repository": "ml-models",
          "targetPath": ".gitignore",
          "syncMode": "merge-append", 
          "preserveLocal": true,
          "mergeStrategy": "append-unique"
        },
        {
          "repository": "documentation",
          "targetPath": ".gitignore",
          "syncMode": "merge-append",
          "preserveLocal": true,
          "mergeStrategy": "append-unique"
        },
        {
          "repository": "infrastructure", 
          "targetPath": ".gitignore",
          "syncMode": "merge-append",
          "preserveLocal": true,
          "mergeStrategy": "append-unique"
        }
      ]
    },

    "github-workflows": {
      "enabled": true,
      "description": "Shared GitHub Actions workflows",
      "sourcePattern": ".github/workflows/shared-*.yml",
      "targets": [
        {
          "repository": "*",
          "targetPath": ".github/workflows/",
          "syncMode": "replace",
          "preserveLocal": false,
          "excludeRepositories": ["Company-Information"]
        }
      ]
    },

    "security-policies": {
      "enabled": true,
      "description": "Organization security policies and configurations",
      "sourceFiles": [
        "SECURITY.md",
        ".github/dependabot.yml", 
        ".github/CODEOWNERS"
      ],
      "targets": [
        {
          "repository": "*",
          "targetPath": "{{sourceFile}}",
          "syncMode": "replace",
          "preserveLocal": false
        }
      ]
    },

    "documentation-templates": {
      "enabled": true,
      "description": "Shared documentation templates",
      "sourcePattern": "documentation-templates/**/*.md",
      "targets": [
        {
          "repository": "documentation",
          "targetPath": "templates/",
          "syncMode": "replace",
          "preserveLocal": false
        }
      ]
    }
  },

  "repositories": {
    "Comment-Analyzer": {
      "branch": "main",
      "protected": false,
      "requiresPR": false,
      "labels": ["file-sync", "automated"],
      "customSettings": {
        "pythonVersion": "3.12",
        "framework": "streamlit"
      }
    },
    "AI-Investment": {
      "branch": "main", 
      "protected": true,
      "requiresPR": true,
      "reviewers": ["@Ai-Whisperers/dev-team"],
      "labels": ["file-sync", "automated"],
      "customSettings": {
        "pythonVersion": "3.11",
        "nodeVersion": "18.x",
        "hasDatabase": true
      }
    },
    "clockify-ADO-automated-report": {
      "branch": "main",
      "protected": false, 
      "requiresPR": false,
      "labels": ["file-sync", "automated"],
      "customSettings": {
        "pythonVersion": "3.11",
        "architecture": "hexagonal"
      }
    },
    "AI-Whisperers-website-and-courses": {
      "branch": "main",
      "protected": true,
      "requiresPR": true,
      "reviewers": ["@Ai-Whisperers/dev-team"],
      "labels": ["file-sync", "automated", "website"],
      "customSettings": {
        "status": "planning",
        "autoMerge": false
      }
    },
    "AI-Whisperers": {
      "branch": "main",
      "protected": true,
      "requiresPR": true, 
      "reviewers": ["@Ai-Whisperers/dev-team"],
      "labels": ["file-sync", "automated", "standards"],
      "customSettings": {
        "purpose": "organizational-standards",
        "criticalChanges": true
      }
    }
  },

  "conflictResolution": {
    "strategies": {
      "manual": {
        "description": "Create PR for manual review and resolution",
        "action": "create-pr",
        "assignReviewers": true
      },
      "source-wins": {
        "description": "Source file always overwrites target",
        "action": "overwrite",
        "backup": true
      },
      "target-wins": {
        "description": "Keep target file, skip sync",
        "action": "skip",
        "notify": true
      },
      "merge-attempt": {
        "description": "Attempt automatic merge, fallback to manual",
        "action": "auto-merge",
        "fallback": "manual"
      }
    },
    "fileTypeDefaults": {
      "*.md": "manual",
      "*.yml": "merge-attempt", 
      "*.json": "source-wins",
      "*": "manual"
    }
  },

  "notifications": {
    "github-issues": {
      "enabled": true,
      "repository": "Company-Information",
      "labelPrefix": "file-sync",
      "createOnConflict": true,
      "createOnFailure": true
    },
    "workflow-summary": {
      "enabled": true,
      "includeDetails": true,
      "showDiff": false
    },
    "slack": {
      "enabled": false,
      "webhook": "",
      "channel": "#development",
      "mentionOnFailure": true
    }
  },

  "scheduling": {
    "enabled": true,
    "cron": "0 9 * * MON,WED,FRI",
    "timezone": "UTC",
    "skipHolidays": false,
    "maxRunTime": "30m"
  },

  "backup": {
    "enabled": true,
    "retentionDays": 30,
    "strategy": "git-branch",
    "branchPrefix": "file-sync-backup",
    "location": "Company-Information",
    "compress": true
  },

  "monitoring": {
    "enabled": true,
    "metrics": [
      "sync-success-rate",
      "conflict-rate", 
      "average-sync-time",
      "repository-health"
    ],
    "alerts": {
      "failureRate": 0.2,
      "conflictRate": 0.3,
      "responseTime": "5m"
    }
  },

  "validation": {
    "preSync": [
      {
        "name": "file-syntax-check",
        "enabled": true,
        "fileTypes": ["*.yml", "*.json", "*.md"]
      },
      {
        "name": "dependency-check", 
        "enabled": true,
        "fileTypes": ["package.json", "requirements.txt", "Cargo.toml"]
      }
    ],
    "postSync": [
      {
        "name": "build-test",
        "enabled": false,
        "description": "Run build tests after sync (expensive)"
      }
    ]
  }
}