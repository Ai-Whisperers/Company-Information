{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Configuration Schema",
  "type": "object",
  "properties": {
    "mcpServers": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9-_]*$": {
          "type": "object",
          "properties": {
            "command": {
              "type": "string",
              "minLength": 1
            },
            "args": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "env": {
              "type": "object",
              "patternProperties": {
                "^[A-Z][A-Z0-9_]*$": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "required": ["command"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["mcpServers"],
  "additionalProperties": false
}